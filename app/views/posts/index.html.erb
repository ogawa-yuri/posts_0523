<h1>投稿一覧</h1>
<table>
  <tr>
    <th>内容</th>
    <th>日時</th>
    <th>編集する</th>
    <th>削除する</th>
  </tr>
<% @posts.each do |post|  %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><%= link_to "◆", edit_post_path(post.id) %></td>
    <td><%= link_to "◇", post_path(post.id), method: :delete %>
  </tr>
<% end %>
</table>
